<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://axelor.com/xml/ns/object-views
       http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
     
  <grid model="com.axelor.gst.db.InvoiceLine" title="InvoiceLines" name="invoiceLine-grid">
     <field name="product"/>
     <field name="hsbn"/>
     <field name="item"/>
     <field name="qty"/>
     <field name="price"/>
     <field name="netAmount"/>
     <field name="gstRate"/>
     <field name="igst"/>
     <field name="sgst"/>
     <field name="cgst"/>
     <field name="grossAmount"/>
     
  </grid>   
  
  <form model="com.axelor.gst.db.InvoiceLine" title="InvoiceLine" name="invoiceLine-form"> <!-- onSave="action-onSave-update-igst" -->
      <panel title="InvoiceLine">
     <field name="product" onChange="action-onGroup for-all-actions"/>
     <field name="hsbn"/>
     <field name="item"/>
     <field name="qty" onChange="action-onGroup-for-all-actions" />
     <field name="price"/>
     <field name="netAmount" />   <!-- onChange="action-onChange-update-igst" -->
     <field name="gstRate"/>
     <field name="igst"/>
     <field name="sgst"/>
     <field name="cgst"/>
     <field name="grossAmount"/>
      </panel>
  </form>
       
        <action-group name="action-onGroup-for-all-actions" >
               <action name="action-onChange-update-item"/>
               <action name="action-onChange-priceandQuantity-update-netAmout"/>
               <action name="action-onChange-update-igst"/>
               <action name="action-onChange-update-cgst-n-sgst"/>
               <action name="action-onChange-update-grossAmount"/>
        </action-group>
           
       <!--   <action-group name="">
             <action name=""/>
         </action-group>   -->
           
        <action-attrs name="action-onChange-update-item" model="com.axelor.gst.db.Product">
          <attribute name="value" for="item" expr="eval:__this__.product.code+'-'+product.name"/>
          <attribute name="value" for="gstRate" expr="eval:__this__.product.gstRate"/>
           <attribute name="value" for="hsbn" expr="eval:__this__.product.hsbn"/>
          <attribute name="value" for="price" expr="eval:__this__.product.salePrice"/>
       </action-attrs>
       
       <action-attrs name="action-onChange-priceandQuantity-update-netAmout">
          <attribute name="value" for="netAmount" expr="eval: qty*price"/>
          <!-- <attribute name="value" for="igst" expr="eval: netAmount"/> -->
       </action-attrs>
       
       <action-method name="action-onChange-update-igst" model="com.axelor.gst.db.InvoiceLine">
           <call class="com.axelor.gst.Controller.PartyController" method="setIGST"/>
        </action-method> 
        
        <action-method name="action-onChange-update-cgst-n-sgst">
            <call class="com.axelor.gst.Controller.PartyController" method="setSGSTnCGST"/>
        </action-method>
        
        <action-method name="action-onChange-update-grossAmount">
            <call class="com.axelor.gst.Controller.PartyController" method="setGrossAmount"/>
        </action-method>
        
 </object-views>      
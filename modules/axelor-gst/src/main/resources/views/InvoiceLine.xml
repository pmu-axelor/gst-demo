<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://axelor.com/xml/ns/object-views
       http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
     
  <grid model="com.axelor.gst.db.InvoiceLine" title="InvoiceLines" name="invoice-line-grid">
     <field name="product"/>
     <field name="hsbn"/>
     <field name="item"/>
     <field name="qty"/>
     <field name="price"/>
     <field name="netAmount"/>
     <field name="gstRate"/>
     <field name="igst"/>
     <field name="sgst"/>
     <field name="cgst"/>
     <field name="grossAmount"/>
     
  </grid>   
  
  <form model="com.axelor.gst.db.InvoiceLine" title="InvoiceLine" name="invoice-line-form">
      <panel name="invoicelinePanel">
     <field name="product" onChange="action-invoiceline-on-change-product-update-item,action-invoiceline-compute-methods"/>
     <field name="hsbn"/>
     <field name="item"/>
     <field name="qty" onChange="action-invoiceline-compute-methods" />
     <field name="price" onChange="action-invoiceline-compute-methods"/>
     <field name="netAmount" />  
     <field name="gstRate"/>
     <field name="igst"/>
     <field name="sgst"/>
     <field name="cgst"/>
     <field name="grossAmount"/>
      </panel>
  </form>
       
        <action-group name="action-invoiceline-compute-methods" >
               <action name="action-invoiceline-change-price-and-quantity-update-netamount"/>
               <action name="action-invoiceline-method-to-compute"/>
        </action-group>
       
           
       <action-attrs name="action-invoiceline-on-change-product-update-item" model="com.axelor.gst.db.Product">
          <attribute name="value" for="item" expr="eval: product.code+'-'+product.name"/>
          <attribute name="value" for="gstRate" expr="eval: product.gstrate"/>
           <attribute name="value" for="hsbn" expr="eval: product.hsbn"/>
          <attribute name="value" for="price" expr="eval: product.saleprice"/>
       </action-attrs>
       
       <action-attrs name="action-invoiceline-change-price-and-quantity-update-netamount">
          <attribute name="value" for="netAmount" expr="eval: qty*price"/>
        
       </action-attrs>
       
       <action-method name="action-invoiceline-method-to-compute" model="com.axelor.gst.db.InvoiceLine">
           <call class="com.axelor.gst.web.InvoiceLineController" method="computeInvoiceLine"/>
       </action-method> 
 </object-views>      